<Window x:Class="WpfApp11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp11"
        mc:Ignorable="d"
        Title="Диспетчер компоновки" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" Margin="4,4,4,4">
                <TextBlock Text="Последние документы" FontSize="16" />
                <TextBlock Text="1.txt" FontSize="16"/>
                <TextBlock Text="2.txt" FontSize="16"/>
                <TextBlock Text="3.txt" FontSize="16"/>
                <TextBlock Text="4.txt" FontSize="16"/>
                <TextBlock Text="5.txt" FontSize="16"/>
                <TextBlock Text="6.txt" FontSize="16"/>
            </StackPanel>

            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Открыть"     Width="80" Height="24" Margin="4,4,4,4"/>
                    <Button Content="Сохранить"   Width="80" Height="24" Margin="4,4,4,4"/>
                    <Button Content="Закрыть"     Width="80" Height="24" Margin="4,4,4,4"/>
                    <Button Content="Обработать"  Width="80" Height="24" Margin="4,4,4,4"/>
                    <Button Content="О программе" Width="80" Height="24" Margin="4,4,4,4"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="1.txt" FontSize="16" Margin="4,4,4,4" FontWeight="Bold"/>
                    <TextBlock Text="2.txt" FontSize="16" Margin="4,4,4,4"/>
                    <TextBlock Text="3.txt" FontSize="16" Margin="4,4,4,4"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Button Content="A" Width="80" Height="80" Background="Yellow" Margin="4,4,4,4"/>
                    <Button Content="B" Width="80" Height="80" Background="Red" Margin="4,4,4,4"/>
                    <Button Content="C" Width="80" Height="80" Background="Green" Margin="4,4,4,4"/>
                    <Button Content="D" Width="80" Height="80" Background="Blue" Margin="4,4,4,4"/>
                    <Button Content="E" Width="80" Height="80" Background="Gray" Margin="4,4,4,4"/>
                    <Button Content="F" Width="80" Height="80" Background="#f0ecc5" Margin="4,4,4,4"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
